<div class="z-10 h-full pt-10">
  <div class="max-w-lg mx-auto border-2 shadow-lg mt-10 p-5">
    <h1 class="text-center text-2xl font-bold">Register</h1>
    <form id="registerForm" class="space-y-6">
      <div class="space-y-1 text-sm">
        <label for="email" class="block text-gray-500">Email address</label>
        <input
          type="email"
          name="email"
          id="email"
          class="w-full px-4 py-3 rounded-md border-gray-600 bg-gray-900 text-gray-100 focus:border-blue-500"
          placeholder="joeLp@example.com"
          required
        />
      </div>
      <div class="space-y-1 text-sm">
        <label for="password" class="block text-gray-500">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="w-full px-4 py-3 rounded-md border-gray-600 bg-gray-900 text-gray-100 focus:border-blue-500"
          placeholder="Password"
          required
        />
      </div>
      <div class="grid grid-cols-2 gap-6">
        <div class="space-y-1 text-sm">
          <label for="first_name" class="block text-gray-500">First name</label>
          <input
            type="text"
            name="first_name"
            id="first_name"
            class="w-full px-4 py-3 rounded-md border-gray-600 bg-gray-900 text-gray-100 focus:border-blue-500"
            placeholder="First name"
            required
          />
        </div>
        <div class="space-y-1 text-sm">
          <label for="last_name" class="block text-gray-500">Last name</label>
          <input
            type="text"
            name="last_name"
            id="last_name"
            class="w-full px-4 py-3 rounded-md border-gray-600 bg-gray-900 text-gray-100 focus:border-blue-500"
            placeholder="Last name"
            required
          />
        </div>
      </div>
      <div class="space-y-1 text-sm">
        <label for="age" class="block text-gray-500">Age</label>
        <input
          type="number"
          name="age"
          id="age"
          class="w-full px-4 py-3 rounded-md border-gray-600 bg-gray-900 text-gray-100 focus:border-blue-500"
          placeholder="Age"
          required
        />
      </div>
      <button
        type="submit"
        class="block w-full p-3 text-center rounded-sm text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium"
      >Submit</button>
      <div
        id="errorMessageEmail"
        class="text-red-500 mt-2 font-bold text-center"
        style="display: none;"
      >
        Email already registered in the database
      </div>
      <div
        style="display: none;"
        id="spinner"
        class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center"
      >
        <div role="status" class="flex items-center justify-center h-screen">
          <svg
            aria-hidden="true"
            class="inline w-16 h-16 mr-2 text-gray-200 animate-spin fill-blue-600 top-50 left-50"
            viewBox="0 0 100 101"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z"
              fill="currentColor"
            />
            <path
              d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z"
              fill="currentFill"
            />
          </svg>
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </form>
    <p class="text-center">Already registered?
      <a href="/login" class="text-blue-600 hover:underline">Login</a>
    </p>
  </div>
</div>
