<section class="max-w-lg mx-auto mt-10 shadow-lg p-5 hover:shadow-2xl">
  <div
    class="w-full max-w-md p-8 space-y-3 rounded-xl bg-gray-900 text-gray-100"
  >
    <h1 class="text-2xl font-bold text-center">Login</h1>
    <form novalidate="" action="" class="space-y-6" id="loginForm">
      <div class="space-y-1 text-sm">
        <label for="email" class="block text-white">Email</label>
        <input
          name="email"
          type="email"
          id="email"
          placeholder="joeLp@example.com"
          class="w-full px-4 py-3 rounded-md border-gray-700 bg-gray-900 text-gray-100 focus:border-violet-400"
        />
      </div>
      <div class="space-y-1 text-sm">
        <label for="password" class="block text-gray-400">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          class="w-full px-4 py-3 rounded-md border-gray-700 bg-gray-900 text-gray-100 focus:border-violet-400"
        />
        <div class="flex justify-end text-xs text-gray-400">
          <button onclick="toggleForgotPassword()" type="button">Forgot
            Password?</button>
        </div>

      </div>
      <button
        class="block w-full p-3 text-center rounded-sm text-gray-900 bg-violet-400"
      >Sign in</button>
    </form>
    <div id="forgotPasswordContainer" class="mt-4" style="display: none;">
      <form
        onsubmit="sendForgotPasswordEmail(); return false;"
        class="flex flex-col items-center"
      >
        <label for="email" class="text-withe font-semibold mb-2">Email:</label>
        <input
          type="email"
          id="emailForgot"
          placeholder="yoeLp@example.com"
          required
          class="border border-gray-400 text-black font-semibold px-4 py-2 rounded mb-2 focus:outline-none focus:border-blue-500"
        />
        <button
          type="submit"
          class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"
        >
          Enviar
        </button>
      </form>
      <div
        id="sucessMessage"
        class="text-green-500 mt-2 font-bold text-center"
        style="display: none;"
      >
        Email Enviado, verifica tu bandeja de entrada
      </div>
      <div
        id="errorMessage"
        class="text-red-500 mt-2 font-bold text-center"
        style="display: none;"
      >
        Email incorrecto, intente de nuevo
      </div>
    </div>
    <div
      id="errorLoginMessage"
      class="text-red-500 mt-2 font-bold text-center"
      style="display: none;"
    >
      Credenciales invalidas, intente de nuevo
    </div>
    <div class="flex items-center pt-4 space-x-1">
      <div class="flex-1 h-px sm:w-16 bg-gray-700"></div>
      <p class="px-3 text-sm text-gray-400">Login with social accounts</p>
      <div class="flex-1 h-px sm:w-16 bg-gray-700"></div>
    </div>
