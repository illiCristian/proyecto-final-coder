<div class="">
  <div
    class="flex justify-items-center place-content-center gap-10 bg-gray-400 p-4"
  >
    <div>
      <button
        id="dropdownDefaultButton"
        data-dropdown-toggle="dropdown"
        class="text-black font-bold focus:ring-4 focus:outline-none focus:ring-gray-800 rounded-lg text-sm px-4 py-2.5 text-center inline-flex items-center"
        type="button"
      >Filtrar por...
        <svg
          class="w-4 h-4 ml-2"
          aria-hidden="true"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"
          ></path></svg></button>
      <!-- Dropdown menu -->
      <div
        id="dropdown"
        class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 absolute"
      >
        <ul
          class="py-2 text-sm text-gray-700 dark:text-gray-200"
          aria-labelledby="dropdownDefaultButton"
        >
          <li>
            <a
              href="http://localhost:8080/?category=pantalones"
              class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Pantalones</a>
          </li>
          <li>
            <a
              href="http://localhost:8080/?category=remeras"
              class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Remeras</a>
          </li>
          <li>
            <a
              href="http://localhost:8080/?category=camisas"
              class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Camisas</a>
          </li>
          <li>
            <a
              href="http://localhost:8080/?category=zapatos"
              class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Zapatos</a>
          </li>
          <li>
            <a
              href="http://localhost:8080"
              class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Ver todos</a>
          </li>
        </ul>
      </div>
    </div>
    {{#if hasPrevPage}}
      <a
        href="/?page={{prevPage}}"
        class="inline-flex items-center px-4 py-2 mr-3 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
      >
        <svg
          aria-hidden="true"
          class="w-5 h-5 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        ><path
            fill-rule="evenodd"
            d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
            clip-rule="evenodd"
          ></path></svg>
        Previous
      </a>
    {{/if}}

    {{#if hasNextPage}}
      <a
        href="/?page={{nextPage}}"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
      >
        Next
        <svg
          aria-hidden="true"
          class="w-5 h-5 ml-2"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        ><path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          ></path></svg>
      </a>
    {{/if}}
  </div>

  <div
    class="md:px-4 md:grid md:grid-cols-2 md:gap-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 space-y-4 md:space-y-0"
  >
    {{#each products}}
      <div
        class="max-w-xs rounded-md shadow-md dark:bg-gray-900 dark:text-gray-100 border-4 h-[520px] border-gray-200 dark:border-gray-700 shadow-lg relative px-6 pt-6 pb-2 rounded-xl shadow-lg transform hover:scale-105 transition duration-500 ease-in-out mx-auto mt-2"
      >
        <img
          src={{this.thumbnail}}
          alt=""
          class="object-cover object-center w-full rounded-t-md h-72 dark:bg-gray-500"
        />
        <div class="flex flex-col justify-between p-6 space-y-8">
          <div class="space-y-2">
            <h2
              class="text-3xl font-semibold tracking truncate"
            >{{this.title}}</h2>
            <p class="dark:text-gray-100 truncate">{{this.description}}</p>
          </div>
          <div
            class="flex flex-col justify-center items-center absolute bottom-1 left-1/2 y transform -translate-x-1/2"
          >
            <h1 class="text-gray-200 font-bold text-xl">${{this.price}}</h1>

            <button
              onclick="openModal(this)"
              data-id="{{this.id}}"
              class="flex items-center justify-center w-full p-3 font-semibold tracking rounded-md bg-violet-400 dark:text-gray-900"
            ><span class="mr-2"><i class="fa-solid fa-cart-shopping"></i></span>
              Add to cart</button>
          </div>
        </div>
      </div>
      {{!  }}
      {{!-- <div class="max-w-md bg-white shadow-lg rounded-lg">
      <div class="px-4 py-2">
        <h1
          class="text-gray-900 font-bold text-2xl uppercase truncate"
        >{{this.title}}</h1>
        <p class="text-gray-600 text-sm mt-1">{{this.description}}</p>
      </div>
      <img
        class="h-[300px] w-full object-cover mt-2"
        src={{this.thumbnail}}
        alt={{this.title}}
      />
      <div class="flex items-center justify-between px-4 py-2 bg-gray-900">
        <h1 class="text-gray-200 font-bold text-xl">${{this.price}}</h1>
        <button
          onclick="openModal(this)"
          data-id="{{this.id}}"
          class="flex items-center justify-center w-full p-3 font-semibold tracki rounded-md dark:bg-violet-400 dark:text-gray-900"
        >Add to card</button>
      </div>
    </div> --}}
    {{/each}}

    <div id="product-modal" class="fixed z-10 inset-0 overflow-y-auto hidden">
      <div
        class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
      >
        <div class="fixed inset-0 transition-opacity">
          <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
        </div>

        <div
          class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
        >
          <div class="modal-content">
            <h2 class="text-lg font-bold mb-2">{{title}}</h2>
            <p class="text-gray-700 mb-2">{{description}}</p>
            <p class="text-gray-700 mb-2">${{price}}</p>
            <p class="text-gray-700 mb-2">Stock: {{stock}}</p>
            <button
              class="bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:focus:ring-gray-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"
              onclick="addToCart('{{id}}')"
            >Agregar al carrito</button>
            <button
              class="bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:focus:ring-gray-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"
              onclick="closeModal()"
            >Cerrar</button>

          </div>
        </div>
      </div>

    </div>
  </div></div>
<div
  style="z-index: 9999; display: none;"
  id="spinner"
  class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center"
>
  <div
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center"
  >
    <div
      class="w-16 h-16 border-4 border-dashed rounded-full animate-spin dark:border-violet-400"
    ></div>
  </div>

</div>
<footer class="bg-gray-400 py-6 mt-2">
  <div class="container mx-auto px-4">
    <div class="flex flex-col sm:flex-row sm:justify-between">
      <div class="text-white mb-4 sm:mb-0 sm:max-w-sm">
        <p class="text-3xl text-black font-bold font-sans italic">Contactenos
          Ahora</p>
        <p class="text-lg text-black font-semibold italic mt-4">Rellene el
          siguiente formulario para ponerse en contacto con nosotros.
          <br />Estamos a su disposici√≥n para responder a cualquier pregunta o
          prestarle la asistencia que necesite.
          <br />
          Valoramos sus comentarios y esperamos tener noticias suyas.</p>
      </div>
      <div class="text-white sm:w-1/2 sm:pl-4">

        <form id="contactForm" class="space-y-4">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-black"
            >Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:ring focus:ring-opacity-50"
            />
          </div>
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-black"
            >Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:ring focus:ring-opacity-50"
            />
          </div>
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-black"
            >Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:ring focus:ring-opacity-50"
            ></textarea>
          </div>
          <div class="flex justify-end">
            <button
              type="button"
              class="text-gray-200 bg-gray-800 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-red-100 dark:focus:ring-red-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 w-[130px]"
            >Send</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</footer>
<script
  src="https://kit.fontawesome.com/4061d47edd.js"
  crossorigin="anonymous"
></script>
